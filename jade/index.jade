doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/ionic.app.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_ctrl.js')
  body(ng-app='kj-ball')
    ion-pane
      ion-header-bar.bar-stable
        h1.title Tenative: Ball-in-Hole
      ion-content(ng-controller='MainCtrl')
        .ball(style='top:{{y}}px; left:{{x}}px;')
        .hole(style='top: 20px; left:20px;')
        p {{width}}
      .bar.bar-footer.bar-stable
        button.button.button-assertive.pull-right Start!
