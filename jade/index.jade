doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/ionic.app.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_ctrl.js')
  body(ng-app='kj-ball')
    ion-pane
      ion-header-bar.bar-stable
        button.button.button-calm(ng-click='init()') New Game
        h1.title Ball-in-Hole
      ion-content(ng-controller='MainCtrl')
        .background(style='width:{{trueWidth}}px; height:{{trueHeight}}px;')
          canvas#gameboard
            canvas#hole
